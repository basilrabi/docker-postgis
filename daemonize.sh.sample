#!/bin/bash

if [[ "${UID}" -ne 0 ]]
then
  echo "This script must be run as root or with sudo."
  exit 1
fi

cat >/etc/systemd/system/postgis.service <<EOL
[Unit]
Description=PostGIS Podman Container
Wants=syslog.service

[Service]
ExecStart=/usr/bin/podman start -a postgis
ExecStop=/usr/bin/podman stop -t 300 postgis

[Install]
WantedBy=multi-user.target
EOL

systemctl enable postgis.service
systemctl restart postgis.service

exit 0

